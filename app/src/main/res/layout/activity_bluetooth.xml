<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AppControl.MainActivity">
<ImageView
    android:id="@+id/nav_bluetooth"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button_on"
        android:minWidth="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/turn_on"
        android:layout_marginBottom="16dp"
        style="base.Widget.AppCompat.Button.Colored"/>

    <Button
        android:id="@+id/button_off"
        android:minWidth="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_on"
        android:text="@string/turn_off"
        android:layout_marginTop="16dp" />

     <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_off"
        android:text="@string/button_status_text"
        android:layout_marginTop="16dp"
        android:textSize="24sp" />

</RelativeLayout>
